{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend for the Ecommerce app",
  "main": "server/server.js",
  "scripts": {
    "start": "nodemon server/server.js",    // Starting the server with nodemon
    "build": "cd client && npm run build",  // Builds the React frontend
    "client": "cd client && npm start",    // Starts the React frontend in a separate process
    "dev": "concurrently \"npm run client\" \"npm run start\"",  // Runs both client and server simultaneously during development
    "server": "npm run start"              // Just for starting the server in production
  },
  "author": "Rohit Chand",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.1",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.7",
    "paypal-rest-sdk": "^1.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"  // Added for concurrent running of frontend and backend
  }
}
